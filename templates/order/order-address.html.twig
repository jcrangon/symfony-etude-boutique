<div class="container mt-4">
	<div class="row">
		<div class="col-md-6">
			<div class="container">
				<div class="row">
					<div class="col bg-light">
						<h4>
							Adresse de livraison
						</h4>
						<p>
							<small>Veuillez indiquer l'adresse de livraison...</small>
						</p>
					</div>
				</div>
				<div class="vr"></div>
				<!-- Liste des erreurs -->
				{% include('./template-parts/all-notifs.html.twig') %}

				<div class="row ">
					<div class="col bg-light">
						{{ form(stepForm) }}
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-3 offset-3">
				<div class="container bg-light pb-4">
					<div class="row">
						<h4>Panier:</h4>
					</div>
					<div class="row mb-3">
						<div class="col-md-7 d-flex justify-content-end">
							Total Articles HT:
						</div>
						<div class="col-md-5 d-flex justify-content-end">
							{{ cartTotals.totalHT|format_currency('EUR') }}
						</div>
					</div>

					<div class="row pb-2 mb-1 border-0 border-bottom">
						<div class="col-md-7 d-flex justify-content-end">
							Livraison:
						</div>
						<div class="col-md-5 d-flex justify-content-end">
							{{ totalLivraisonHT|format_currency('EUR') }}
						</div>
					</div>

					<div class="row mb-3">
						<div class="col-md-7 d-flex justify-content-end">
							Total HT:
						</div>
						<div class="col-md-5 d-flex justify-content-end">
							{{ (cartTotals.totalHT + totalLivraisonHT)|format_currency('EUR') }}
						</div>
					</div>

					<div class="row mb-3 border-0 border-bottom">
						<div class="col-md-7 d-flex justify-content-end">
							TVA(20%):
						</div>
						<div class="col-md-5 d-flex justify-content-end pb-2">
							{{ tva20|format_currency('EUR') }}
						</div>
					</div>

					<div class="row  mb-3">
						<div class="col-md-7 d-flex justify-content-end">
							Total TTC:
						</div>
						<div class="col-md-5 d-flex justify-content-end">
							<strong>{{ totalTTC|format_currency('EUR') }}</strong>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col border-top border-secondary mt-5 d-flex justify-content-end pt-3">
			<a class="btn btn-outline-dark cart-btn d-inline-block" href="{{ absolute_url(path('app_order', {step: 2})) }}" role="button">Etape suivante</a>
		</div>
	</div>
	<div class="checkout-step" data-step="{{ step }}"></div>
