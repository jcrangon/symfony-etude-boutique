<div class="modal fade" id="signInModal" tabindex="-1" aria-labelledby="signInModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="signInModalLabel">Connexion...</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

				<form class="modal-login-form" method="post">
					<div class="alert alert-danger ajax-error-notif d-none"></div>

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Déconnexion</a>
						</div>
					{% endif %}

					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username is defined ? last_username : '' }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label class="mt-2" for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					<input
					type="hidden" id="csrf" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


					{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																																																																																																																																	See https://symfony.com/doc/current/security/remember_me.html #}

					<div class="checkbox mb-3 mt-2">
						<label>
							<input type="checkbox" name="_remember_me">
							Se souvenir de moi
						</label>
					</div>

					<div class="d-flex flex-row align-items-center">
						<button class="btn btn-secondary" type="submit">
							Envoyer
						</button>
						<div class="spinner-border d-inline-block ms-3 text-secondary d-none" role="status">
							<span class="visually-hidden">Loading...</span>
						</div>
					</div>
				</form>

				<div class="container">
					<div class="row">
						<div class="col mt-3">
							<span>Pas encore inscrit ?</span>
							<a href="{{ path('app_register') }}" target="_self">Créer un compte !</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
