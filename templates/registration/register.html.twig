{% extends 'layout-full-width.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
	<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}
<div class="reg-form">
	<div class="container border-bottom mb-1">
		<h1>S'inscrire</h1>
	</div>

	<div class="container mb-3 text-danger">Tous les champs sont obligatoires*</div>


	{{ form_start(registrationForm) }}


	<h3 class="mt-5 mb-2">-- Informations de connexion</h3>


	{{ form_row(registrationForm.email) }}

	{{ form_row(registrationForm.password, {
            label: 'Mot de passe'
        }) }}

	{{ form_row(registrationForm.agreeTerms, {
            label: 'J\'ai lu les termes et conditions'
        }) }}
</div>

<div class="reg-form">
        <h3 class="mt-5 mb-2">-- Informations de profile</h3>


        {{ form_row(registrationForm.pseudo, {

            label: 'Pseudo'

        }) }}

        {{ form_row(registrationForm.nom, {

            label: 'Nom'

        }) }}

        {{ form_row(registrationForm.prenom, {

            label: 'Prénom'

        }) }}

        {{ form_row(registrationForm.civilite, {

            label: 'Genre'

        }) }}

        {{ form_row(registrationForm.adresse, {

            label: 'N° rue, voie'

        }) }}

        {{ form_row(registrationForm.codePostal, {

            label: 'Code Postal'

        }) }}

        {{ form_row(registrationForm.ville, {

            label: 'Ville'

        }) }}


        <div class="container border-top mt-5">

            <button type="submit" class="btn btn-outline-primary mt-3">Register</button>

        </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
